doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="./css/style.min.css")
    title Aviasales
  body
  header.header
    img(src="./img/svg/icon/logo.svg", alt="Логотип" width='60' height='60')
  main.main
    form.form.filters(action="#", method="post")
      p.filters--title Количество пересадок
      input.visually-hidden(type="radio", name="filter" value='all' id="all" checked)
      label.filters--label(for="all")
        span.filters--checkbox
          svg.filters--svg
            use(xlink:href='./img/svg/sprite/sprite.svg#check-mark')
        span.filters--text Все
      input.visually-hidden(type="radio", name="filter" value='0 transfer' id="0 transfer")
      label.filters--label(for="0 transfer")
        span.filters--checkbox
          svg.filters--svg
            use(xlink:href='./img/svg/sprite/sprite.svg#check-mark')
        span.filters--text Без пересадок
      input.visually-hidden(type="radio", name="filter" value='1 transfer' id="1_transfer")
      label.filters--label(for="1_transfer")
        span.filters--checkbox
          svg.filters--svg
            use(xlink:href='./img/svg/sprite/sprite.svg#check-mark')
        span.filters--text 1 пересадка
      input.visually-hidden(type="radio", name="filter" value='2 transfer' id="2_transfer")
      label.filters--label(for="2_transfer")
        span.filters--checkbox
          svg.filters--svg
            use(xlink:href='./img/svg/sprite/sprite.svg#check-mark')
        span.filters--text 2 пересадки
      input.visually-hidden(type="radio", name="filter" value='3 transfer' id="3_transfer")
      label.filters--label(for="3_transfer")
        span.filters--checkbox
          svg.filters--svg
            use(xlink:href='./img/svg/sprite/sprite.svg#check-mark')
        span.filters--text 3 пересадки
    form.form.sort(action="#", method="post")
      input.visually-hidden(type="checkbox", name="cheapest" id="cheapest")
      label.sort--button.sort--button__js-cheapest(for="cheapest") Самый дешевый
      input.visually-hidden(type="checkbox", name="sort" value='fastest' id="fastest")
      label.sort--button(for="fastest") Самый быстрый
      input.visually-hidden(type="checkbox", name="sort" value='optimal' id="optimal")
      label.sort--button(for="optimal") Оптимальный
  footer
  script(src='./js/main.js' type='module')
  template#ticket
    .ticket
      p.ticket--price 13 400 P
      img.ticket--logo(src='#' srcset='#' alt='Логотип компании' height='36')
      ul.ticket--list#departure
        li.ticket--item
          p.ticket--title#direction MOW - HKT
          p.ticket--text 10:45 - 08:00
        li.ticket--item
          p.ticket--title В пути
          p.ticket--text.ticket--text__lower#travel-time-first 21ч 15м
        li.ticket--item
          p.ticket--title#stops 2 пересадки
          p.ticket--text#stop-place hkg, jnb
      ul.ticket--list#come-back
        li.ticket--item
          p.ticket--title#direction mow - hkt
          p.ticket--text 11:20 - 00:50
        li.ticket--item
          p.ticket--title В пути
          p.ticket--text.ticket--text__lower#travel-time-second 13ч 30м
        li.ticket--item
          p.ticket--title#stops 1 пересадка
          p.ticket--text#stop-place hkg
